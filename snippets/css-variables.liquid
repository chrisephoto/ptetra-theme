{% style %}
  {% # Loads all font variantions with display: swap %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    --font-size-base: {{ settings.type_font_size }}px;
    --font-family-body: {{ settings.type_font_body.family }}, {{ settings.type_font_body.fallback_families }};
    --font-style-body: {{ settings.type_font_body.style }};
    --font-weight-body: {{ settings.type_font_body.weight }};
    --font-family-headings: {{ settings.type_font_headings.family }}, {{ settings.type_font_headings.fallback_families }};
    --font-style-headings: {{ settings.type_font_headings.style }};
    --font-weight-headings: {{ settings.type_font_headings.weight }};

    --page-density: {{ settings.page_density | divided_by: 100.0 }};
    --page-margin: {{ settings.min_page_margin }}px;
    --page-width: {{ settings.max_page_width }}px;

    --color-background: {{ settings.background_color }};
    --color-foreground: {{ settings.foreground_color }};

    --border-radius: {{ settings.corner_radius }}px;
  }
{% endstyle %}
